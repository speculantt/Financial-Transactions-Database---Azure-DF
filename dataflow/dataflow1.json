{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "File_import",
						"type": "DatasetReference"
					},
					"name": "NewFile",
					"description": "financial import from santander"
				},
				{
					"dataset": {
						"referenceName": "fulldatabasefile",
						"type": "DatasetReference"
					},
					"name": "csvdatabasefile"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "fulldatabasefile",
						"type": "DatasetReference"
					},
					"name": "WriteDown"
				}
			],
			"transformations": [
				{
					"name": "AddKey"
				},
				{
					"name": "FilterNulls"
				},
				{
					"name": "AddKey1"
				},
				{
					"name": "RenameColumns"
				},
				{
					"name": "union1"
				},
				{
					"name": "AddSource"
				},
				{
					"name": "AddSource1"
				},
				{
					"name": "SelectKeyOnly"
				},
				{
					"name": "PrepForUnion"
				},
				{
					"name": "LookupKey"
				},
				{
					"name": "UpdateInsert"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {FECHA OPERACIÓN} as string,",
				"          {FECHA VALOR} as string,",
				"          CONCEPTO as string,",
				"          {IMPORTE EUR} as string,",
				"          SALDO as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     moveFiles: ['NewFilesUpload','Processed']) ~> NewFile",
				"source(output(",
				"          DateOperation as string,",
				"          DateEffective as string,",
				"          Description as string,",
				"          Amount as string,",
				"          Saldo as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> csvdatabasefile",
				"NewFile derive(Key = crc32(concat({FECHA OPERACIÓN},{FECHA VALOR},{IMPORTE EUR},{SALDO}))) ~> AddKey",
				"AddSource filter(or(not(isNull({FECHA OPERACIÓN})),not(isNull({IMPORTE EUR})))) ~> FilterNulls",
				"csvdatabasefile derive(Key = crc32(concat(DateOperation,DateEffective,Amount,Saldo))) ~> AddKey1",
				"FilterNulls select(mapColumn(",
				"          DateOperation = {FECHA OPERACIÓN},",
				"          DateEffective = {FECHA VALOR},",
				"          Description = CONCEPTO,",
				"          Amount = {IMPORTE EUR},",
				"          Saldo = SALDO,",
				"          Key,",
				"          Source",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> RenameColumns",
				"AddSource1, PrepForUnion union(byName: true)~> union1",
				"AddKey derive(Source = 'newfile') ~> AddSource",
				"AddKey1 derive(Source = 'database') ~> AddSource1",
				"RenameColumns select(mapColumn(",
				"          NewFileKey = Key",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectKeyOnly",
				"RenameColumns select(mapColumn(",
				"          DateOperation,",
				"          DateEffective,",
				"          Description,",
				"          Amount,",
				"          Saldo,",
				"          Key,",
				"          Source",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> PrepForUnion",
				"union1, SelectKeyOnly lookup(Key == NewFileKey,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> LookupKey",
				"LookupKey alterRow(updateIf(and(Key==NewFileKey, Source=='database')),",
				"     insertIf(Source=='newfile')) ~> UpdateInsert",
				"UpdateInsert sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          DateOperation as string,",
				"          DateEffective as string,",
				"          Description as string,",
				"          Amount as string,",
				"          Saldo as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> WriteDown"
			]
		}
	}
}